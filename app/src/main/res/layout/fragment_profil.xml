<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".pages.profil.ProfilFragment">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/pass"
            android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/email"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/email"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="128dp"
            android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="Password : "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/pass"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3"/>
    <TextView
            android:text="Email : "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/email"
            android:layout_marginEnd="44dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="152dp"/>
    <Button
            android:text="Connecter"
            android:layout_width="252dp"
            android:layout_height="46dp"
            android:id="@+id/connecBtn"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="76dp"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/pass"/>
    <Button
            android:text="CrÃ©er un compte"
            android:layout_width="252dp"
            android:layout_height="46dp"
            android:id="@+id/creerBTN"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/connecBtn"
            android:layout_marginTop="52dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>