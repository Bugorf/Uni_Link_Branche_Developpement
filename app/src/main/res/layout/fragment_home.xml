<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".pages.module.ModuleFragment" android:id="@+id/home_frag">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/text_home"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.5"
            android:textSize="24sp"/>
    <ImageButton
            android:src="@drawable/add"
            android:layout_width="64dp"
            android:layout_height="58dp" android:id="@+id/imageButton"
            android:background="#00FFFFFF" android:layout_marginEnd="47dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="78dp"/>

    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
    >

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="6dp"
                    android:paddingTop="4dp"
                    android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="10dp"
                        android:backgroundTint="@color/green_A700"
                        android:layout_margin="6dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/cardIssues"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                android:layout_margin="10dp"
                                android:text="Issues"
                                android:textSize="20dp"
                                android:textColor="@android:color/white"
                                android:fontFamily="@font/alata_regular"
                                android:includeFontPadding="false"
                                android:textStyle="bold"/>


                        <ImageView
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:layout_margin="4dp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:src="@drawable/issue"
                                app:tint="@color/green_50"
                                android:alpha="0.5"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="10dp"
                        android:backgroundTint="@color/blue_500"
                        android:layout_margin="6dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/cardPullRequest"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                android:layout_margin="10dp"
                                android:text="Pull Requests"
                                android:textSize="20dp"
                                android:textColor="@android:color/white"
                                android:fontFamily="@font/alata_regular"
                                android:includeFontPadding="false"
                                android:textStyle="bold"/>


                        <ImageView
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:layout_margin="4dp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:src="@drawable/git_pull_request"
                                app:tint="@color/blue_50"
                                android:alpha="0.5"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>


            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp"
                    android:paddingTop="4dp"
                    android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="10dp"
                        android:backgroundTint="@color/purple_300"
                        android:layout_margin="6dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/cardRepo"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                android:layout_margin="10dp"
                                android:text="Repositories"
                                android:textSize="20dp"
                                android:textColor="@android:color/white"
                                android:fontFamily="@font/alata_regular"
                                android:includeFontPadding="false"
                                android:textStyle="bold"/>


                        <ImageView
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:layout_margin="4dp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:src="@drawable/ic_book_1"
                                app:tint="@color/green_50"
                                android:alpha="0.5"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="10dp"
                        android:backgroundTint="@color/orange_400"
                        android:layout_margin="6dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/cardOrganizations"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                android:layout_margin="10dp"
                                android:text="Organizations"
                                android:textSize="20dp"
                                android:textColor="@android:color/white"
                                android:fontFamily="@font/alata_regular"
                                android:includeFontPadding="false"
                                android:textStyle="bold"
                        />


                        <ImageView
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:layout_margin="4dp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:src="@drawable/ic_organization"
                                app:tint="@color/green_50"
                                android:alpha="0.5"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>


            </LinearLayout>


            <View
                    android:layout_width="match_parent"
                    android:layout_height="50dp"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>